{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": [
      "body-parser",
      "compression",
      "cookie-parser",
      "express",
      "express-serve-static-core",
      "jasmine",
      "mime",
      "node",
      "serve-static",
      "source-map",
      "hammerjs",
      "webpack"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
