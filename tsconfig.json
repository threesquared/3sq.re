{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noEmitHelpers": true,
    "sourceMap": true,
    "types": [
      "body-parser",
      "compression",
      "cookie-parser",
      "ejs",
      "express",
      "express-serve-static-core",
      "jasmine",
      "mime",
      "node",
      "serve-static",
      "source-map",
      "hammerjs",
      "webpack"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./src/app/**/*.ts",
    "!./node_modules/**"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
